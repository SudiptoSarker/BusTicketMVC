@model BusTicketWebApp.Models.Member

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12">
    <div class="row">
        <div class="management_info">
            <div class="row">
                <div class="col-xs-6" style="border:1px solid black;">
                    <p>Member Id <span style="color:cornflowerblue">@Model.Id</span></p>
                </div>
                <div class="col-xs-6" style="border:1px solid black;overflow:hidden;">
                    <p>Registration Date <span style="color:cornflowerblue">@Model.CreateDate</span></p>
                </div>
                <div class="col-xs-6" style="border:1px solid black">
                    <p>Member Status <span style="color:cornflowerblue">@Model.StatusTxt</span></p>
                </div>
                <div class="col-xs-6" style="border:1px solid black">
                    @* <p>GMO Order Id <span style="color:cornflowerblue">@Model.Order.GmoOrderNo</span></p>*@
                </div>
            </div>
        </div>
        <div class="ordering_information" style="margin-top:30px;">
            <div class="row">
                <h3 style="padding-left: 14px;">Customer Information</h3>
            </div>

            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="i_ticket_name">First Name</label>
                        <input type="text" class="form-control" id="i_ticket_name" name="i_ticket_name" placeholder="" value="@Model.FirstName">
                    </div>
                    <div class="form-group">
                        <label for="i_ticket_name">Last Name</label>
                        <input type="text" class="form-control" id="i_ticket_name" name="i_ticket_name" placeholder="" value="@Model.LastName">
                    </div>
                    <div class="form-group">
                        <label for="i_ticket_name">Phone</label>
                        <input type="text" class="form-control" id="i_ticket_name" name="i_ticket_name" placeholder="" value="@Model.PhoneNumber">
                    </div>
                </div>
                <div class="col-xs-offset-1 col-xs-7">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="i_first_name">Email</label>
                                <input type="text" class="form-control" id="i_first_name" name="i_first_name" value="@Model.Email">
                                <p class="text-danger" id="i_first_name_vm"></p>
                            </div>
                            <div class="form-group">
                                <label for="i_last_name">Login Password</label>
                                <input type="text" class="form-control" id="i_last_name" name="i_last_name" value="@Model.LoginPassword">
                                <p class="text-danger" id="i_last_name_vm"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="ticket_information">
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label for="i_ticket_type">Status</label>
                        <select class="form-control" name="ticket_type">
                            @*@foreach (var item in Model.TicketTypes)
                                {
                                    if (item.Id == Model.Order.TicketTypeId)
                                    {
                                        <option value="@item.Id" selected>@item.TypeName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.TypeName</option>
                                    }

                                }*@
                            @{
                                string enabledSelect = "";
                                string stoppedSelect = "";
                                if (Convert.ToInt32(Model.Status) == 1)
                                {
                                    enabledSelect = "Enabled";
                                }
                                else
                                {
                                    stoppedSelect = "Stopped";
                                }
                            }
                            <option value="0" @stoppedSelect>Stopped</option>
                            <option value="1" @enabledSelect>Enabled</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <p class="text-center" id="operational_message"></p>
            </div>
            <div class="col-xs-offset-3 col-xs-2">
                <button class="btn  btn-warning" id="btnUpdate" style="width:100%;">Update</button>
            </div>
            <div class="col-xs-2">
                <button class="btn" style="width:100%;background-color:black;color:white" id="btnCancel">Cancel</button>
            </div>

        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Device Type</th>
                            <th>Environment</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.DeviceName</td>
                            <td>@Model.UserAgent</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        @*<div class="row">
                <div class="col-xs-12">
                    <table class="table" id="update_summery_table" style="display:none">
                        <thead>
                            <tr>
                                <th>Updated At</th>
                                <th>Customer Name</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>View Details</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>*@
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            let priceAdult = parseInt($('#price_for_adult').val());
            let priceChild = parseInt($('#price_for_child').val());

            $('.datepicker').datepicker();

            $('#i_first_name').on('keyup', function () {
                var firstNameValue = $(this).val();
                if (firstNameValue == null || firstNameValue == "") {
                    $('#i_first_name_vm').html("enter first name");
                    $('#btnUpdate').attr('disabled', 'disabled');
                    return false;
                }
                else {
                    $('#i_first_name_vm').html("");
                    $('#btnUpdate').removeAttr('disabled');
                }
            });
            $('#i_last_name').on('keyup', function () {
                var lastNameValue = $(this).val();
                if (lastNameValue == null || lastNameValue == "") {
                    $('#i_last_name_vm').html("enter last name");
                    $('#btnUpdate').attr('disabled', 'disabled');
                    return false;
                }
                else {
                    $('#i_last_name_vm').html("");
                    $('#btnUpdate').removeAttr('disabled');
                }
            });
            $('#i_email').on('keyup', function () {
                var emailValue = $(this).val();
                if (emailValue == null || emailValue == "") {
                    $('#i_email_vm').html("enter email");
                    $('#btnUpdate').attr('disabled', 'disabled');
                    return false;
                }
                else {
                    $('#i_email_vm').html("");
                    $('#btnUpdate').removeAttr('disabled');
                }
            });

            $('#i_phone_number').on('keyup', function () {
                var phoneNumberValue = $(this).val();
                if (phoneNumberValue == null || phoneNumberValue == "") {
                    $('#i_phone_number_vm').html("enter phone number");
                    $('#btnUpdate').attr('disabled', 'disabled');
                    return false;
                }
                else {
                    $('#i_phone_number_vm').html("");
                    $('#btnUpdate').removeAttr('disabled');
                }
            });


            $('#ticket_adult').change(function () {
                    var adult = parseInt($('#ticket_adult :selected').val());
                    var child = parseInt($('#ticket_child :selected').val());


                    var result = adult + child;
                    if (result > 10) {
                        $('#adult_adult_vm').html('Can not be grater then 10 with both');
                        $('#btnUpdate').attr('disabled', 'disabled');
                        $('#new_price_span').html('0');
                        $('#total_amount').val(0);
                    }
                    else {
                        $('#adult_adult_vm').html('');
                        $('#btnUpdate').removeAttr('disabled');

                        let totalPrice = (adult * priceAdult) + (child * priceChild);
                        $('#total_amount').val(totalPrice);
                        $('#new_price_span').html(totalPrice);
                    }



            });

            $('#ticket_child').change(function () {
                var child = parseInt($('#ticket_child :selected').val());
                var adult = parseInt($('#ticket_adult :selected').val());

                var result = adult + child;
                if (result > 10) {
                    $('#adult_adult_vm').html('Can not be grater then 10 with both');
                    $('#btnUpdate').attr('disabled', 'disabled');
                    $('#new_price_span').html('0');
                    $('#total_amount').val(0);
                }
                else {
                    $('#adult_adult_vm').html('');
                    $('#btnUpdate').removeAttr('disabled');
                    let totalPrice = (adult * priceAdult) + (child * priceChild);
                    $('#total_amount').val(totalPrice);
                    $('#new_price_span').html(totalPrice);
                }



            });
            $('#btnCancel').on('click', function () {
                  let order_id = $('#order_id').val();
                let user_id = $('#user_id').val();
                let first_name = $('#i_first_name').val();
                let last_name = $('#i_last_name').val();
                let email = $('#i_email').val();
                let phone = $('#i_phone_number').val();

                let number_of_child = $('#ticket_child').val();
                let number_of_adult = $('#ticket_adult').val();
                let total_amount = $('#total_amount').val();
                let previous_total_amount = $('#previous_total_amount').val();
                if (total_amount == '0') {
                    total_amount = previous_total_amount;
                }

                let updateDataAsString = `{'OrderId':'${order_id}','UserId':'${user_id}','FirstName':'${first_name}','LastName':'${last_name}','Email':'${email}','Phone':'${phone}','Adult':'${number_of_adult}','Child':'${number_of_child}','TotalAmount':'${total_amount}'}`;

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DeleteMember", "Member")',
                    data: {
                        updateData: updateDataAsString
                    },
                    success: function (data) {
                        if (data.Status == 'ok') {

                            $('#update_summery_table').css('display', 'inline-table');
                            $('#cancellationfee_message').css('display','block');
                            $('#operational_message').html(data.Message);
                            $('#btnUpdate').attr('disabled', 'disabled');
                            $('#btnCancel').attr('disabled', 'disabled');
                            //$('#update_summery_table tbody').append(`<tr><td>${data.UpdateData.UpdatedAt}</td><td>${data.UpdateData.CustomerName}</td><td>${data.UpdateData.TotalPrice}</td><td>cancelled</td><td><a href="@Url.Action("OrderUpdatedDetails", "Orders", new {Id = @ViewBag.OrderId })" target="_blank;">details</a></td></tr>`);
                        }
                        else {
                            $('#operational_message').html(data.Message);
                        }

                    },
                    complete: {
                    }
                });
            });
            $('#btnUpdate').on('click', function () {

                let order_id = $('#order_id').val();
                let user_id = $('#user_id').val();
                let first_name = $('#i_first_name').val();
                let last_name = $('#i_last_name').val();
                let email = $('#i_email').val();
                let phone = $('#i_phone_number').val();

                let number_of_child = $('#ticket_child').val();
                let number_of_adult = $('#ticket_adult').val();
                let total_amount = $('#total_amount').val();
                let previous_total_amount = $('#previous_total_amount').val();
                if (total_amount == '0') {
                    total_amount = previous_total_amount;
                }

                let updateDataAsString = `{'OrderId':'${order_id}','UserId':'${user_id}','FirstName':'${first_name}','LastName':'${last_name}','Email':'${email}','Phone':'${phone}','Adult':'${number_of_adult}','Child':'${number_of_child}','TotalAmount':'${total_amount}'}`;


                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("UpdateMember", "Member")',
                    data: {
                        updateData: updateDataAsString
                    },
                    success: function (data) {
                        console.log(data);
                        if (data.Status == 'ok') {

                            $('#update_summery_table').css('display','inline-table');
                            $('#operational_message').html(data.Message);
                            //$('#update_summery_table tbody').append(`<tr><td>${data.UpdateData.UpdatedAt}</td><td>${data.UpdateData.CustomerName}</td><td>${data.UpdateData.TotalPrice}</td><td>updated</td><td><a href="@Url.Action("OrderUpdatedDetails", "Orders", new {Id = @ViewBag.OrderId })" target="_blank;">details</a></td></tr>`);
                        }
                        else {
                            $('#operational_message').html(data.Message);
                        }

                    },
                    complete: {
                    }
                });
            });
        });
    </script>

}


