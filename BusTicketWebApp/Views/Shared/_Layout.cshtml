<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
</head>
<body>
    @if (Session["show"] == null)
    {
        <div class="navbar navbar-default navbar-custom">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/Index/Home" class="navbar-brand">
                        <img src="~/imgs/logo.PNG" id="logo_img" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="https://b-rc-api-busticket-mgr.azurewebsites.net" target="_blank">Api</a></li>
                    </ul>
                    @if (Session["email"] != null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["email_display"] != null)
                            {
                                <li><span id="login_name">@Session["email_display"] <i class="fa fa-times" aria-hidden="true" style="cursor:pointer;"></i></span></li>
                            }
                            <li><a href="/User/Logout"><span class="glyphicon glyphicon-log-out"></span></a></li>
                        </ul>
                    }

                </div>
            </div>
        </div>
    }

    <div class="main_body">
        <div class="container-fluid">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
